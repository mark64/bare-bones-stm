#pragma once

#include <cstdint>

namespace uc {
namespace hal {

class Gpio {
  public:
    typedef struct {
      GPIO_TypeDef* port;
      GPIO_InitTypeDef* pin;
    }GpioPinStruct;
    // Gpio Functions
    static void Init();
    static void SetMode(GpioPinStruct* pin);
    static void Set(GpioPinStruct* pin, GPIO_PinState pin_state);
    static void Get(GpioPinStruct* pin);
};

} // namespace uc
} // namespace hal
